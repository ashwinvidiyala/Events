<h2 class='text-primary'>Registration</h2>
<form action="<%= users_path %>" method="post">
  <input class='form-control' type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label>First Name</label>
  <input class='form-control' type="text" name="user[first_name]"><br><br>

  <label>Last Name</label>
  <input class='form-control' type="text" name="user[last_name]"><br><br>

  <label>Email</label>
  <input class='form-control' type="email" name="user[email]"><br><br>

  <label>Location</label>
  <input class='form-control'  type="text" name="user[location]">
  <select class='form-control' name="user[state]">
    <% states.each do |state| %>
      <option value="<%= state %>"><%= state %></option>
    <% end %>
  </select><br><br>

  <label>Password</label>
  <input class='form-control' type="password" name="user[password]"><br><br>

  <label>Confirm Password</label>
  <input class='form-control' type="password" name="user[password_confirmation]"><br><br>

  <input class='btn btn-primary' type="submit" value="Register">
</form>

<h2 class='text-primary'>Login</h2>
<form action="<%= sessions_path %>" method="post">
    <input class='form-control' type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <label>Email</label>
    <input class='form-control' type="email" name="email"><br><br>

    <label>Password</label>
    <input class='form-control' type="password" name="password"><br><br>

    <input class='btn btn-primary' type="submit" value="Login">
</form>
